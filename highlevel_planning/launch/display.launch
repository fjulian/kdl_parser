<!--
  visualize MoMa robots in RViz with a fake joint publisher

  usage: roslaunch moma_description display.launch robot_name:={ridgeback, panda, mopa, yumi, mobmi}
-->
<launch>
  <param name="robot_description" command="$(find xacro)/xacro $(find chimera_app_highlevel_planning)/data/models/box_panda_hand.urdf.xacro"/>
  <node name="joint_state_publisher" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui"/>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find chimera_app_highlevel_planning)/launch/display.rviz"/>
</launch>
